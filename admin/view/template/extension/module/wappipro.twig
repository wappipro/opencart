{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning is not empty %}

            {% for error in error_warning %}
                <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error.error }}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endfor %}

        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="s-w">

                {% if wappipro_test_result is not empty %}
                    <div class="alert alert-warning wappipro-alert wappipro-alert-failure alert-dismissible show" role="alert">
                        Тест не пройден, проверьте ID ПРОФИЛЯ и ТОКЕН API! <a
                                href="#"
                                type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </a>
                    </div>
                {% endif %}

                <div class="s-h">
                    <img src="{{ wappipro_logo }}" style="height: 100px" alt="wappipro">
                </div>
                <div class="s-b">
                    <div class="group">
                        <label><p>{{ instructions_title }}</p></label>
                        <ul>
                            <li><span class="tag">1</span>
                                <p> {{ step_1 }}</p></li>
                            <li><span class="tag">2</span>
                                <p>{{ step_2 }}</p></li>
                            <li><span class="tag">3</span>
                                <p>{{ step_3 }}</p></li>
                            <li><span class="tag">4</span>
                                <p>{{ step_4 }}</p></li>
                        </ul>
                    </div>
                </div>
            </div>
